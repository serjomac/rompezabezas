 <button disabled="disabled"><a href="/imagenes">regresar</a></button>
<form class="form" action="/imagenes/{{id}}?_method=PUT" method="post">
 <div class="form-group">
    <label for="description">Descripcion</label>
    <input value="{{descripcion}}" type="text" class="form-control" id="title" placeholder="Enter a todo" name="descripcion">   
  </div>
  <div class="form-group">
    <label for="title">URL</label>
    <input value="{{url}}" type="file" class="form-control" id="urlImg">
  </div>
  
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Enter a todo" id="urlInput" name="url">
  </div>
  

  
  
  <div class="form-group">
    <label for="description">Audio</label>
    <input value="{{id_audios}}" type="number" class="form-control" id="title" placeholder="Enter a todo" name="id_audios">
    
  </div>
  
  
  <button type="submit" class="btn btn-default btn-danger">
    Actualizar
  </button>

{{#each scripts}}
<script src="{{script}}"></script>
{{/each}}